#!/bin/bash

source ./bin/ci/util
load_environment_variables
print_header

# Reload main env
pwd=$(pwd)

if [ ! -f $rpi_base_tgz ]; then 
  msg "ERROR! $rpi_base_tgz does not exist! Exiting"
  exit 1
else
  msg "Remove old rpi_base_dir"
  sudo rm -Rf $rpi_base_dir

  sync;sync;sync # I seem to get errors if I do not run this

  msg "Expand raw rpi_base_dir"
  sudo mkdir -p $rpi_base_dir
  cd $rpi_base_dir
  cd ..
  sudo tar xfz $rpi_base_tgz

  sync;sync;sync # I seem to get errors if I do not run this
fi
